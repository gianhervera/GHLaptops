<div class="container">
<div class="card mb-3">
<%= form_for @search, html: {class:"pure-form"} do |s|%>
	<div class="card-body">
		<h5 class="card-title">Search</h5>
		<div class="input-group">
			<%= s.text_field :keywords, class: "form-control" %>
		</div>
	</div>
  	<div class="card-body">
		<h5 class="card-title">Price range</h5>
		<div class="form-row">
		<div class="form-group col-md-6">
		  <%= s.label :min_price, "Min"%>
		  <%= s.text_field :min_price, size: 10, class:"form-control" %>
		</div>
		<div class="form-group text-right col-md-6">
		  <%= s.label :max_price, "Max"%>
		  <%= s.text_field :min_price, size: 10, class:"form-control" %>
		</div>
		</div> <!-- form-row.// -->
      <div class="actions"> <%= s.submit "Search", class: "btn btn-primary"%></div>
</div>
</div>
<% end %>