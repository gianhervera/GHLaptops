<div class="col-sm-9 padding-right" id="wrapper-center">
					<div class="features_items">
            <% @products.each do |product| %>
						<div class="col-sm-4">
							<div class="product-image-wrapper">
								<div class="single-products">
										<div class="productinfo text-center">
                      <% if product.image.present? %>
                      <p><%=image_tag product.image.variant(resize_to_limit: [285,285]).processed%></p>
                      <%end%>
											<h2> <%= number_to_currency product.price %></h2>
											<p><%= product.company %></p>
                      <p><%= product.product %></p>
                     <p><%= product.type_name %></p>
										<button type="button" class="btn btn-dark"><%= link_to "More Details", product  %></button>
										</div>
								</div>
							</div>
						</div>
            <%end%>
					</div><!--features_items-->
 <%= pagy_nav(@pagy).html_safe%>
				</div>